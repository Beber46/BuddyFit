<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.guimsbeber.buddyfit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.guimsbeber.buddyfit.Welcome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            
        </activity>
        <activity
            android:name="fr.guimsbeber.buddyfit.HomeActivity"
            android:label="@string/title_activity_home"
    		android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.guimsbeber.buddyfit.SignUpActivity"
            android:label="@string/title_activity_sign_up" 
    		android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        </activity>
        <activity
            android:name="fr.guimsbeber.buddyfit.MenuActivity"
            android:label="@string/title_activity_menu"
    		android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen" >
        </activity>
    </application>

</manifest>