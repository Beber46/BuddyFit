<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:padding="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtNameInfo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grisprofil" />

    <TextView
        android:id="@+id/txtNowInfo"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="78kg"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black_overlay" 
        android:layout_toRightOf="@+id/txtNameInfo"/>
    
    <ProgressBar
        android:id="@+id/pbInfo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/redprogress"
        android:layout_toRightOf="@+id/txtNowInfo"
        android:layout_toLeftOf="@+id/txtIdealInfo" />

    <TextView
        android:id="@+id/txtIdealInfo"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="75kg"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black_overlay"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
